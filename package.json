{
  "name": "just-check",
  "version": "1.2.0",
  "description": "Simple check for installed packages with versions correspond to those specified in the package.json",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "clean": "rm -rf dist",
    "test": "jest",
    "semantic-release": "semantic-release",
    "prepare": "is-ci || husky install"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "just-check": "dist/bin.js"
  },
  "dependencies": {
    "semver": "^7.5.0"
  },
  "peerDependencies": {
    "semver": "^7.5.0"
  },
  "files": [
    "dist/*",
    "package.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dschewchenko/just-check.git"
  },
  "keywords": [
    "dependencies",
    "check",
    "version",
    "install",
    "npm",
    "package"
  ],
  "author": "dschewchenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dschewchenko/just-check/issues"
  },
  "homepage": "https://github.com/dschewchenko/just-check#readme",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.3",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "semantic-release": "^21.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "prettier": {
    "printWidth": 140,
    "tabWidth": 2
  }
}
